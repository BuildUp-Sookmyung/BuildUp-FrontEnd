<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".record.DetailRecordActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_record_detail"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/border_divider"
        app:theme="@style/ToolbarTitleColor">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_nor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록 상세"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textColor="#000000" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/border_divider"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_activity_detailrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="17sp"
                android:textFontWeight="500"
                android:lineHeight="25dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_category_detailrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/text_secondary"
                android:textFontWeight="500"
                android:lineHeight="22dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_date_detailrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:textFontWeight="400"
                android:lineHeight="19dp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_title_detailrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textFontWeight="700"
                android:lineHeight="30dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/linear_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경험/상황"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:textFontWeight="400"
                android:lineHeight="22dp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tv_experience_detailrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textFontWeight="400"
                android:lineHeight="22dp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용한 개념/해결책"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:textFontWeight="400"
            android:lineHeight="22dp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_concept_detailrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/text_primary"
            android:textFontWeight="400"
            android:lineHeight="22dp" />
            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결과/느낀점"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:textFontWeight="400"
            android:lineHeight="22dp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_result_detailrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/text_primary"
            android:textFontWeight="400"
            android:lineHeight="22dp"
            android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:textFontWeight="400"
            android:lineHeight="22dp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_content_detailrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/text_primary"
            android:textFontWeight="400"
            android:lineHeight="22dp"
            />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26.5dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_detail_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_url_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_url"/>
            <TextView
                android:id="@+id/tv_url_detailrecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:lineHeight="19dp"
                android:textFontWeight="400"/>
        </LinearLayout>
    </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>