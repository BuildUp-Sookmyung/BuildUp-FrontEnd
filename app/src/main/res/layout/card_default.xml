<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="327dp"
    android:layout_height="93dp"
    android:backgroundTint="@color/background"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/cl_checkbox"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_dash"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/dash_line"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_block"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/img_number_block_01_red"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:text="1"
                android:textColor="@color/text_white"
                android:textSize="11dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_block"
                app:layout_constraintEnd_toEndOf="@id/iv_block"
                app:layout_constraintStart_toStartOf="@id/iv_block"
                app:layout_constraintTop_toTopOf="@id/iv_block" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/box_cardview"
                android:layout_width="281dp"
                android:layout_height="77dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_block"
                android:background="@drawable/box_cardview">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="221dp"
                    android:layout_height="22dp"
                    android:text="첫 번째 멘토링"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:fontFamily="@font/pretendard_m"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="221dp"
                    android:layout_height="22dp"
                    android:text="0000-00-00"
                    android:textColor="@color/text_secondary"
                    android:textSize="13dp"
                    android:fontFamily="@font/pretendard"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_list_arrow"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>