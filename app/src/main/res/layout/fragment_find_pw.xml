<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_id"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_m"
                    android:text="아이디"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_id"
                    style="@style/MyIDInputLayout"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"

                    android:layout_marginTop="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_id">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_id"
                        style="@style/MyTextInputEditText"
                        android:layout_width="327dp"
                        android:layout_height="wrap_content"
                        android:hint="아이디를 입력해주세요"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"

                        android:paddingVertical="12dp"
                        android:selectAllOnFocus="true"
                        android:textColorHint="@color/selector"
                        android:textCursorDrawable="@drawable/input_cursor"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_name"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_id">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_m"
                    android:text="이름"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_name"
                    style="@style/MyIDInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_name"
                        style="@style/MyTextInputEditText"
                        android:layout_width="327dp"
                        android:layout_height="wrap_content"
                        android:hint="이름을 알려주세요."
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"

                        android:selectAllOnFocus="true"
                        android:textCursorDrawable="@drawable/input_cursor"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_number"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_name">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_m"
                    android:text="주민등록번호"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_bday"
                    style="@style/MyIDInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bday"
                        style="@style/MyTextInputEditText"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:hint="생년월일 6자리"
                        android:maxLength="6"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"

                        android:selectAllOnFocus="true"
                        android:textCursorDrawable="@drawable/input_cursor"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_number"
                    style="@style/MyIDInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_number"
                        style="@style/MyTextInputEditText"
                        android:layout_width="152dp"
                        android:layout_height="wrap_content"
                        android:hint="•"
                        android:maxLength="1"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"

                        android:selectAllOnFocus="true"
                        android:textCursorDrawable="@drawable/input_cursor"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="40dp"
                    android:lineSpacingMultiplier="40"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dots"
                    app:layout_constraintBottom_toBottomOf="@+id/tl_number"
                    app:layout_constraintEnd_toEndOf="@id/tl_number"
                    app:layout_constraintTop_toTopOf="@+id/tl_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mobile"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_number">

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_m"
                    android:text="본인 인증"
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_mobile"
                    style="@style/MyIDInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mobile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_mobile"
                        style="@style/MyTextInputEditText"
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:hint="핸드폰번호를 입력해주세요."
                        android:maxLength="11"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"

                        android:selectAllOnFocus="true"
                        android:textCursorDrawable="@drawable/input_cursor"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_verify"
                    android:layout_width="88dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/selector_btn_ver"
                    android:clipToOutline="true"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="인증 요청"
                    android:textColor="@color/background"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mobile" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_verify"
                    style="@style/MyIDInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tl_mobile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_verify"
                        style="@style/MyTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="인증번호를 입력해주세요."
                        android:maxLength="6"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"

                        android:selectAllOnFocus="true"
                        android:textCursorDrawable="@drawable/input_cursor"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/pretendard_m"

                    android:text="02:59"
                    android:textColor="@color/text_error"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tl_verify"
                    app:layout_constraintTop_toTopOf="@+id/tl_verify" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="327dp"
            android:layout_height="46dp"

            android:layout_marginTop="40dp"
            android:background="@drawable/selector_btn_cmd"
            android:fontFamily="@font/pretendard_bold"
            android:text="비밀번호 재설정"
            android:textColor="@color/background"

            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn_ok"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>