                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_area17" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area20"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area19"
                app:layout_constraintTop_toBottomOf="@id/btn_area17" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="134.5dp"
            android:layout_height="46dp"
            android:clipToOutline="true"
            android:background="@drawable/btn_cmd_lin_short"

            android:text="나가기"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/pretendard_bold"
            android:lineSpacingExtra="4sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="134.5dp"
            android:layout_height="46dp"
            android:clipToOutline="true"

            android:text="저장"
           android:textColor="@color/text_white"
            android:fontFamily="@font/pretendard_bold"
            android:lineSpacingExtra="4sp"
            android:background="@drawable/btn_cmd_sol"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>