                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area12"
                app:layout_constraintTop_toBottomOf="@id/btn_area9" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area14"
