                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area6"
                app:layout_constraintTop_toBottomOf="@id/btn_area4" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area8"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area7"
                app:layout_constraintTop_toBottomOf="@id/btn_area4" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area9"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_area6" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area10"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area9"
                app:layout_constraintTop_toBottomOf="@id/btn_area6" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area11"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area10"
                app:layout_constraintTop_toBottomOf="@id/btn_area6" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area12"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_area9" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area13"
