<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="327dp"
    android:layout_height="522dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="245dp"
            android:layout_height="25dp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5sp"
            android:text="관심분야 선택"
            android:textSize="17dp"
            android:textColor="@color/text_primary"

            android:layout_marginStart="24dp"
            android:layout_marginTop="23.5dp"
            android:layout_marginBottom="15.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="279dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_popup_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        app:layout_constraintTop_toBottomOf="@id/cl_title"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="279dp"
            android:layout_height="22dp"
            android:fontFamily="@font/pretendard"
            android:text="* 최대 3개 선택 가능합니다."
            android:textSize="15dp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_button_area"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select">

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area1"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area2"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area1"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area3"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_area1" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area4"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area3"
                app:layout_constraintTop_toBottomOf="@id/btn_area1" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area5"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toEndOf="@id/btn_area4"
                app:layout_constraintTop_toBottomOf="@id/btn_area1" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area6"
                style="@style/AreaButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:minWidth="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_area4" />

            <androidx.appcompat.widget.AppCompatToggleButton
                android:id="@+id/btn_area7"
