<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/cl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            >
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_record"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_dash"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/dash_line"
            android:layout_marginStart="12dp" />

            <ImageView
                android:id="@+id/iv_block"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_number_block_01_red" />

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_alignLeft="@id/iv_block"
                android:layout_alignTop="@id/iv_block"
                android:layout_alignRight="@id/iv_block"
                android:layout_alignBottom="@id/iv_block"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_white"
                android:textSize="11dp" />
        </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear_record_box"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/box_cardview"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_m" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_secondary"
                    android:textSize="13dp"
                    android:fontFamily="@font/pretendard"
                    android:layout_marginTop="4dp" />

                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_list_arrow"
                    android:layout_marginEnd="18dp" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>