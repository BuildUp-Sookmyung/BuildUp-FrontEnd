<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:text="활동 삭제"
        android:textColor="@color/text_primary"
        android:textSize="17dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="279dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_popup_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="활동을 삭제하시겠습니까?\n해당 활동에 포함된 모든 기록이 삭제됩니다."
        android:textColor="@color/text_primary"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard"
        android:layout_marginTop="14.5dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_top"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="134.5dp"
        android:layout_height="46dp"
        android:text="취소"
        android:textColor="@color/text_primary"
        android:textSize="15dp"
        android:fontFamily="@font/pretendard_bold"
        android:background="@drawable/btn_cmd_lin134"
        android:layout_marginTop="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24.24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete"
        android:layout_width="134.5dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_solid_red"
        android:fontFamily="@font/pretendard_bold"
        android:text="삭제"
        android:textColor="@color/text_white"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="24.24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@id/tv_body" />

</androidx.constraintlayout.widget.ConstraintLayout>