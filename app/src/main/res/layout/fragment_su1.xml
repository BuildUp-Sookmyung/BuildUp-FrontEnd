<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="327dp"
        android:layout_height="66dp"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="7sp"
        android:text="빌드업을 이용하기 위해\n약관에 동의해주세요."
        android:textColor="@color/text_primary"
        android:textSize="22sp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_checklist"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_all"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_m"
                android:text="모든 약관 사항에 전체 동의합니다."
                android:textColor="@color/text_primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_all"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_all" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_service"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_service"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_m"
                android:text="서비스 이용 약관 동의 (필수)"
                android:textColor="@color/text_primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_service"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_detail1"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="자세히"
                android:fontFamily="@font/pretendard_m"
                android:textColor="@color/text_accent"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_persInfo"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_service">

            <CheckBox
                android:id="@+id/cb_persInfo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_persInfo"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_m"
                android:text="개인정보 수집 및 이용 동의 (필수)"
                android:textColor="@color/text_primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_persInfo"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_detail2"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="자세히"
                android:fontFamily="@font/pretendard_m"
                android:textColor="@color/text_accent"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_marketing"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_persInfo">

            <CheckBox
                android:id="@+id/cb_marketing"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_marketing"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_m"
                android:text="마케팅 정보 수신동의 (선택)"
                android:textColor="@color/text_primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_marketing"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btn_open"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginEnd="4.5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_open_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_expander_open_nor"
                android:layout_marginEnd="4.5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_sms"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_marketing">

            <CheckBox
                android:id="@+id/cb_sms"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:layout_marginStart="29dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_sms"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_m"
                android:text="SMS 수신 동의"
                android:textColor="@color/text_primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_sms"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_email"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_sms">

            <CheckBox
                android:id="@+id/cb_email"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="29dp"
                android:background="@drawable/selector_checkbox"
                android:button="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/pretendard_m"
                android:text="이메일 수신 동의"
                android:textColor="@color/text_primary"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_email"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="327dp"
        android:layout_height="46dp"

        android:text="다음"
        android:textColor="@color/background"
        android:textSize="15dp"
        android:background="@drawable/selector_btn_cmd"
        android:fontFamily="@font/pretendard_bold"

        android:layout_marginTop="440dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>